generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Apartment {
  id            Int        @id @default(autoincrement())
  address       Address
  price         Float
  rooms         RoomDetails
  photos        String[]
}

model Address {
  id            Int        @id @default(autoincrement())
  streetName    String
  streetNumber  String
  neighborhood  String
}

model RoomDetails {
  id                    Int      @id @default(autoincrement())
  apartmentFloor        Int
  communityFee          Float
  renovationNeeded      Boolean
  squareMeters          Float
  bedrooms              Int
  bathroom              Int
  suites                Int
  gotBalcony            Boolean
  gotCarSpace           Boolean
  insideGatedCommunity  Boolean
}